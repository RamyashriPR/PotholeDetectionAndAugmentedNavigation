<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hackathon.honeywell.potholedetectionandlogging.MapsActivity" >

    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="vertical" />


    <Button
        android:id="@+id/add_pothole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/colorFocusedHighlight"
        android:gravity="center_horizontal|center_vertical"
        android:text="ADD POTHOLE"
        android:textColor="@android:color/white"
        android:onClick="addPothole"

        />

</FrameLayout>